{
	"name": "JobTracker Dev",
	"build": {
	  "context": "..",
	  "dockerfile": "../Dockerfile"
	},
	"features": {
	},
	"forwardPorts": [8501],
	"postCreateCommand": "pip install -r requirements.txt",
	"remoteUser": "root",
  
	"customizations": {
	  "vscode": {
		"extensions": [
		  "ms-python.python",           // Python support
		  "ms-toolsai.jupyter",         // Jupyter notebook support
		  "ms-vscode.makefile-tools",   // Makefile syntax and tasks
		  "formulahendry.code-runner",  // Run code quickly
		  "randomfractalsinc.vscode-data-preview" // View CSVs and data
		]
	  }
	}
  }
  